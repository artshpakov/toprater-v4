= render partial: "partials/header"

script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry"


div ng-controller="ListViewCtrl"
  #wrapper-map
    #wrapper-map2
      section@list-view
        a.card ng-repeat="object in alternatives" ng-mouseover="hoverCard(object)" ng-mouseout="hoverCard(object, false)" href="#"
          .card-image-area style="background-image: url({{ object.cover }})"
            .card-position {{ $index+1 }}
          .card-title {{ object.name }}
  #map
    ui-gmap-google-map center="map.center" zoom="map.zoom" bounds="map.bounds" options="options"
      ui-gmap-marker ng-repeat="marker in map.markers" coords="marker.coordinates" events="marker.events" idkey="marker.id" options="marker.options"
        ui-gmap-window options="marker.windowOptions" show="currentMarker == marker"
          div {{ $index+1 }}. {{ marker.name }}

sass:
  [role=list-view] > ul
    margin-left: 30px

  .card
    display: block
    width: 180px
    height: 220px
    float: left
    border: 1px solid #bbb
    margin: 0 7px 10px
    .card-image-area
      padding: 10px
      height: 120px
      background-size: cover
      background-position: center
      background-color: #ddd
    .card-title
      padding: 10px
    .card-position
      height: 40px
      width: 40px
      background-color: #ff5a5f
      color: #fff
      text-align: center
      line-height: 40px
      font-size: 20px
      border-radius: 20px
